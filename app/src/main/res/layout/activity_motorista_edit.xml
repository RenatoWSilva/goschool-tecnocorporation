<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.motorista.MotoristaEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="115dp"
        tools:layout_editor_absoluteY="5dp">

        <EditText
            android:id="@+id/edNome"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:hint="Nome do motorista" />

        <EditText
            android:id="@+id/edcnh"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edNome"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:hint="cnh do motorista" />

        <EditText
            android:id="@+id/edcpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edcnh"
            android:layout_alignParentStart="true"
            android:ems="10"
            android:hint="cpf do motorista"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnDeleteMotorista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/btnEditMotorista"
                android:layout_toEndOf="@+id/btnEditMotorista"
                android:text="Remover" />

            <Button
                android:id="@+id/btnEditMotorista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edcpf"
                android:layout_alignParentStart="true"
                android:text="Alterar" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>